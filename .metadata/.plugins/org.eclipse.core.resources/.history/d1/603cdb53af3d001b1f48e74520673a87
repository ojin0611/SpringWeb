/* 사용자 */
CREATE TABLE scott.Users (
	userid VARCHAR2(12) NOT NULL, /* 새 컬럼 */
	passwd VARCHAR2(20), /* 새 컬럼2 */
	name VARCHAR2(20), /* 새 컬럼3 */
	age NUMBER(2), /* 새 컬럼4 */
	gender CHAR(1) /* 새 컬럼5 */
);

COMMENT ON TABLE scott.Users IS '사용자';

COMMENT ON COLUMN scott.Users.userid IS '새 컬럼';

COMMENT ON COLUMN scott.Users.passwd IS '새 컬럼2';

COMMENT ON COLUMN scott.Users.name IS '새 컬럼3';

COMMENT ON COLUMN scott.Users.age IS '새 컬럼4';

COMMENT ON COLUMN scott.Users.gender IS '새 컬럼5';

CREATE UNIQUE INDEX scott.PK_Users
	ON scott.Users (
		userid ASC
	);

ALTER TABLE scott.Users
	ADD
		CONSTRAINT PK_Users
		PRIMARY KEY (
			userid
		);